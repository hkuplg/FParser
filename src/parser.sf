-- Normal version
let xmlEscapedChar : Parser[Char] = {
    let quot = (string (fromString "&quot;")) $>[PolyString, Char] '"';
    let apos = (string (fromString "&apos;")) $>[PolyString, Char] '\'';
    let lt = (string (fromString "&lt;"))     $>[PolyString, Char] '<';
    let gt = (string (fromString "&gt;"))     $>[PolyString, Char] '>';
    let amp = (string (fromString "&amp;"))   $>[PolyString, Char] '&';

    quot `choice[Char]` apos `choice[Char]` lt `choice[Char]` gt `choice[Char]` amp
};

let xmlEscapedCodePoint : Parser[PolyString] =
    (string (fromString "&#x"))
        *>[PolyString, Int] hexdecimal
        <*[Int, Char] (char ';')
        <$>[Int, PolyString] (\(codep : Int) ->
                (fromString (new java.lang.String(java.lang.Character.toChars(codep)))));

let xmlChar : Parser[Char] =
    xmlEscapedChar <|>[Char] (noneof (fromString "\"'<>&"));

let xmlString : Parser[PolyString] =
    many1[Char] xmlChar
       <|>[PolyString] xmlEscapedCodePoint;

let xmlDoubleQuotedString : Parser[PolyString] =
    (char '"') *>[Char, PolyString] xmlString <*[PolyString, Char] (char '"');

let xmlSingleQuotedString : Parser[PolyString] =
    (char '\'') *>[Char, PolyString] xmlString <*[PolyString, Char] (char '\'');

let xmlQuotedString : Parser[PolyString] =
    choice[PolyString] xmlDoubleQuotedString xmlSingleQuotedString;

let xmlText : Parser[XMLNode] =
    xmlString <$>[PolyString, XMLNode] (\(content : PolyString) -> XMLText content);

let xmlCData : Parser[XMLNode] =
    string (fromString "<![CDATA[")
        *>[PolyString, PolyList[Char]] (many[Char] item)
            <$>[PolyList[Char], XMLNode] (\(cd : PolyList[Char]) -> XMLCData cd)
        <*[XMLNode, PolyString] (string (fromString "]]>"));

let xmlKey : Parser[PolyString] =
    many1[Char] (letter <|>[Char] (char '-'));

let xmlAttr : Parser[XMLNode] =
    bind[PolyString, XMLNode]  xmlKey                                                          (\(key : PolyString) ->
    bind[PolyString, XMLNode]  (xmlSpace >>[Unit, Char] (char '=')
                                      >>[Char, Unit] xmlSpace
                                      >>[Unit, PolyString] xmlQuotedString)                    (\(val : PolyString) ->
    result[XMLNode] (XMLAttr key val)));

let xmlAttrs : Parser[PolyList[XMLNode]] =
    sepby[XMLNode, Unit] xmlAttr xmlSpace;

let xmlEndTag (tag : PolyString) : Parser[Unit] =
    (string (fromString "</"))
        >>[PolyString, Unit]   xmlSpace
        >>[Unit, PolyString]   (string tag)
        >>[PolyString, Unit]   xmlSpace
        >>[Unit, Char]      (char '>')
        $>[Char, Unit]      ();

