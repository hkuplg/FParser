--        `choice[XMLNode]` -- ^~~ normal style  v~~ shorter style
--
--        ((string (fromString "/>")) <$>[PolyString, XMLNode] (\(__ : PolyString) -> (XMLElement tag attrs (Nil[XMLNode]))))
--    ))))))

let rec xmlElement : Parser[XMLNode] =
    (char '<') >>[Char, Unit] xmlSpace >>[Unit, PolyString] xmlKey >>=[PolyString, XMLNode] (\(tag : PolyString) ->
        xmlSpace >>[Unit, PolyList[XMLNode]] xmlAttrs >>=[PolyList[XMLNode], XMLNode] (\(attrs : PolyList[XMLNode]) ->
            -- Normal ends
            ((char '>') >>[Char, Unit] xmlSpace >>[Unit, PolyList[XMLNode]]
                xmlElementChildren <*[PolyList[XMLNode], Unit] xmlSpace <*[PolyList[XMLNode], Unit] (xmlEndTag tag)
                    <$>[PolyList[XMLNode], XMLNode] (\(ch : PolyList[XMLNode]) -> XMLElement tag attrs ch))

            <|>[XMLNode]

            -- Short ends
            ((string (fromString "/>"))
                >>[PolyString, XMLNode] (result[XMLNode] (XMLElement tag attrs (Nil[XMLNode]))))))

and xmlElementChildren : Parser[PolyList[XMLNode]] =
    (xmlCData <$>[XMLNode, PolyList[XMLNode]] (\(c : XMLNode) -> singleton[XMLNode] c)
        <|>[PolyList[XMLNode]] (xmlText `using[XMLNode, PolyList[XMLNode]]` (\(n : XMLNode) -> singleton[XMLNode] n))
        <|>[PolyList[XMLNode]] (sepby1[XMLNode, Unit] xmlElement xmlSpace))
    <|>[PolyList[XMLNode]] (result[PolyList[XMLNode]] (Nil[XMLNode]));

let xmlProcInst : Parser[XMLNode] =
    (string (fromString "<?")) >>[PolyString, Unit] xmlSpace
        >>[Unit, PolyString] xmlKey >>=[PolyString, XMLNode] (\(target : PolyString) ->
            xmlSpace >>[Unit, PolyList[XMLNode]] xmlAttrs
                <*[PolyList[XMLNode], PolyString] (xmlSpace >>[Unit, PolyString] (string (fromString "?>")))
                    >>=[PolyList[XMLNode], XMLNode] (\(conts : PolyList[XMLNode]) ->
                        result[XMLNode] (XMLProcInst target conts)));

let parseXML : Parser[PolyList[XMLNode]] =
    (many[XMLNode] xmlProcInst)
        >>=[PolyList[XMLNode], PolyList[XMLNode]] (\(procinst1 : PolyList[XMLNode]) ->
            xmlElement >>=[XMLNode, PolyList[XMLNode]] (\(root : XMLNode) ->
                (many[XMLNode] xmlProcInst) >>=[PolyList[XMLNode], PolyList[XMLNode]] (\(procinst2 : PolyList[XMLNode]) ->
                    result[PolyList[XMLNode]] (procinst1 ++[XMLNode] (root +>[XMLNode] procinst2)))));


-- Test

let println (s : String) : Unit = { java.lang.System.out.println(s); () };
let print (s : String) : Unit = { java.lang.System.out.print(s); () };

type TestFn = {
    name : String,
    fn   : Unit -> Unit
};

type TestSuite = {
    name : String,
    fns  : PolyList[TestFn]
};

let runTest (test : TestFn) : Unit = {
    let testingPrefix : String = "\u001b[31;1mtesting\u001b[0m\t";
    println testingPrefix.concat(test.name).concat(" :");
    test.fn ();
    println "\t...ok"
};

let runTests (tests : PolyList[TestFn]) : Unit =
    foldl[TestFn, Unit]
        (\(__ : Unit) (fn : TestFn) -> runTest fn) () tests;

let runTestSuite (suite : TestSuite) : Unit = {
    println "\n\t\u001b[32;1mRunning\u001b[37;1m ".concat(suite.name).concat("\u001b[0m ...\n");
    println "Running ".concat((len[TestFn] suite.fns).toString()).concat(" tests");
    runTests suite.fns
};

let runTestSuites (suites : PolyList[TestSuite]) : Unit =
    foldl[TestSuite, Unit]
        (\(__ : Unit) (suite : TestSuite) -> runTestSuite suite) () suites;

let error (msg : String) = {
    java.lang.System.err.println(msg);
    java.lang.System.exit(1);
    ()
};

-- Test helper functions

let assert (b : Bool) =
    if b then
        ()
    else
        error "assert failed!";

let printFirstXMLResult (r : PolyList[(XMLNode, PolyString)]) =
    case first[(XMLNode, PolyString)] r of
        Nothing        -> print "Nothing in the List!!"
     |  Just x         -> print "(".concat(xmlNodeToString x._1).concat(", \"").concat(toString x._2).concat("\")");

let firstParseResultEqual[A] (eq : Eq[A]) (r : PolyList[(A, PolyString)]) (expected : (A, PolyString)) : Bool =
    case first[(A, PolyString)] r of
        Nothing         -> False
     |  Just x          -> (eq x._1 expected._1) && (polyStringEq x._2 expected._2);

