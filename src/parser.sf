
-- Functions for primitive types
let charEq (a : Char) (b : Char) : Bool = a.equals(b);
let intEq (a : Int) (b : Int) : Bool = a.equals(b);
let boolEq (a : Bool) (b : Bool) : Bool = a.equals(b);
let unitEq (a : Unit) (b : Unit) : Bool = a == b;

let charToString (a : Char) : String = a.toString();
let intToString (a : Int) : String = a.toString();
let boolToString (a : Bool) : String = a.toString();
let unitToString (a : Unit) : String = "()";

-- Definition of Thunk
type Thunk[A] = Unit -> A;

let invoke[A] (t : Thunk[A]) : A =
    t ();

-- Maybe definition

data Maybe[A] = Nothing
              | Just A
              ;

-- Result definition
data Result[S, E] = Ok S
                  | Err E
                  ;

-- Eq definition
type Eq[A] = A -> A -> Bool;

-- State definition
type State[S, A] = S -> (A, S);

-- ADT List
data PolyList[A] = Nil
                 | Cons A (Thunk[PolyList[A]])
                 ;

let rec nats (beg : Int) : PolyList[Int] =
    Cons[Int] beg (\(__ : Unit) -> nats (beg+1));

-- Utilities

let singleton[A] (x : A) : PolyList[A] =
    Cons[A] x (\(__: Unit) -> (Nil[A]));

let rec map[A, B] (f : A -> B) (l : PolyList[A]) : PolyList[B] =
    case l of
        Nil             ->      Nil[B]
     |  Cons x xs       ->      Cons[B] (f x) (\(__ : Unit) -> (map[A, B] f (invoke[PolyList[A]] xs)));

let rec foldl[A, B] (f : B -> A -> B) (z : B) (l : PolyList[A]) : B =
    case l of
        Nil             ->      z
     |  Cons x xs       ->      foldl[A, B] f (f z x) (invoke[PolyList[A]] xs);

--let rec foldr[A, B] (f : A -> B -> B) (z : B) (l : PolyList[A]) : B =
--    case l of
--        Nil             ->      z
--     |  Cons x xs       ->      f x (foldr[A, B] f z (invoke[PolyList[A]] xs));

let foldr[A, B] (f : A -> B -> B) (z : B) (l : PolyList[A]) : B =
    (let rec inner (s : PolyList[A]) (k : B -> B) : B =
        case s of
            Nil         -> k z
         |  Cons x xs   -> inner (invoke[PolyList[A]] xs) (\(y : B) -> k (f x y));
     inner l (\(x : B) -> x));


let join[A] (l : PolyList[A]) (j : A) : PolyList[A] = {
    let rec inner[A] (l : PolyList[A]) (j : A) : PolyList[A] =
        case l of
            Nil         -> (Nil[A])
         |  Cons x xs   -> (Cons[A] j (\(__ : Unit) ->
                                (Cons[A] x (\(__ : Unit) -> inner[A] (invoke[PolyList[A]] xs) j))));
    case l of
        Nil         -> (Nil[A])
     |  Cons x xs   -> (Cons[A] x (\(__ : Unit) -> inner[A] (invoke[PolyList[A]] xs) j))
};

let (+>)[A] (a : A) (l : PolyList[A]) : PolyList[A] =
    Cons[A] a (\(__ : Unit) -> l);

let rec concat2[A] (a : PolyList[A]) (b : PolyList[A]) : PolyList[A] =
    case a of
        Nil         ->  b
      | Cons x xs   ->  Cons[A] x (\(__ : Unit) -> (concat2[A] (invoke[PolyList[A]] xs) b));

let rec lazyconcat2[A] (a : PolyList[A]) (b : Thunk[PolyList[A]]) : PolyList[A] =
    case a of
        Nil         ->  (invoke[PolyList[A]] b)
      | Cons x xs   ->  Cons[A] x (\(__ : Unit) -> (lazyconcat2[A] (invoke[PolyList[A]] xs) b));

let (++)[A] (a : PolyList[A]) (b : PolyList[A]) : PolyList[A] =
    concat2[A] a b;

let (+~)[A] (a : PolyList[A]) (b : Thunk[PolyList[A]]) : PolyList[A] =
    lazyconcat2[A] a b;

let rec concat[A] (l : PolyList[PolyList[A]]) : PolyList[A] =
    case l of
        Nil         ->  Nil[A]
     |  Cons x xs   ->  x +~[A] (\(__ : Unit) -> (concat[A] (invoke[PolyList[PolyList[A]]] xs)));

let rec len[A] (l : PolyList[A]) : Int =
    case l of
        Nil         ->  0
     |  Cons _ xs   ->  1 + (len[A] (invoke[PolyList[A]] xs));

let isempty[A] (l : PolyList[A]) : Bool =
    case l of
        Nil         -> True
     |  Cons _ _    -> False;

let first[A] (l : PolyList[A]) : Maybe[A] =
    case l of
        Nil         -> Nothing[A]
     |  Cons x _    -> Just[A] x;

let rest[A] (l : PolyList[A]) : Maybe[PolyList[A]] =
    case l of
        Nil         -> Nothing[PolyList[A]]
     |  Cons _ xs   -> Just[PolyList[A]] (invoke[PolyList[A]] xs);

let rec take[A] (n : Int) (l : PolyList[A]) : PolyList[A] =
    if n <= 0 then
        (Nil[A])
    else
        case l of
            Nil         ->  Nil[A]
         |  Cons x xs   ->  Cons[A] x (\(__ : Unit) -> (take[A] (n-1) (invoke[PolyList[A]] xs)));

let rec zip[A, B] (a : PolyList[A]) (b : PolyList[B]) : PolyList[(A, B)] =
    case a of
        Nil         -> Nil[(A, B)]
     |  Cons xa xsa ->
            case b of
                Nil         -> Nil[(A, B)]
             |  Cons xb xsb ->
                    Cons[(A, B)] (xa, xb) (\(__ : Unit) -> zip[A, B] (invoke[PolyList[A]] xsa) (invoke[PolyList[B]] xsb));

let listToString[A] (tostr : A -> String) (l : PolyList[A]) : String = {
    type StringBuilder = java.lang.StringBuilder;

    let inner = foldl[String, StringBuilder]
                    (\(b : StringBuilder) (a : String) -> b.append(a))
                    (new java.lang.StringBuilder("["))
                    (join[String] (map[A, String] tostr l) ", ");

    inner.append("]").toString()
};

let rec polyListEq[A] (eq : Eq[A]) (a : PolyList[A]) (b : PolyList[A]) : Bool =
    case a of
        Nil         -> { case b of Nil -> True | Cons _ _ -> False }
     |  Cons ax axs ->
            case b of
                Nil         -> False
             |  Cons bx bxs -> if eq ax bx then
                                    polyListEq[A] eq (invoke[PolyList[A]] axs) (invoke[PolyList[A]] bxs)
                               else False;

-- ADT String

type PolyString = PolyList[Char];

let toString (l : PolyString) : String =
    (foldl[Char, java.lang.StringBuilder]
        (\(b : java.lang.StringBuilder) (a : Char) -> b.append(a))
        (new java.lang.StringBuilder( ))
        l).toString();

let fromString (str : String) : PolyString = {
    let rec inner (str : String) (idx : Int) : PolyString =
        if idx `intEq` length(str) then
            (Nil[Char])
        else
            (Cons[Char] str.charAt(idx) (\(__ : Unit) -> (inner str (idx+1))));
    inner str 0
};

let rec polyStringEq (a : PolyString) (b : PolyString) : Bool =
    polyListEq[Char] (\(a : Char) (b : Char) -> a.equals(b)) a b;

let rec charin (c : Char) (str : PolyString) : Bool =
    case str of
        Nil         ->      False
     |  Cons x xs   ->      if x.equals(c) then True else (charin c (invoke[PolyString] xs));

-- Parser type definition

type Parser[A] = PolyString -> PolyList[(A, PolyString)];

let parseResultEq[A] (eq : Eq[A]) (a : (A, PolyString)) (b : (A, PolyString)): Bool =
    (a._1 `eq` b._1) && (a._2 `polyStringEq` b._2);

let parseResultListEq[A] (eq : Eq[A]) (a : PolyList[(A, PolyString)]) (b : PolyList[(A, PolyString)]) : Bool =
    polyListEq[(A, PolyString)]
        (parseResultEq[A] eq)
        a b;

let parseResultToString[A] (str : A -> String) (res : (A, PolyString)) : String =
    (new java.lang.StringBuilder("("))
        .append(str res._1)
        .append(" ,\"")
        .append(toString res._2)
        .append("\")")
        .toString();

let parseResultListToString[A] (str : A -> String) (res : PolyList[(A, PolyString)]) : String =
    listToString[(A, PolyString)]
        (parseResultToString[A] str)
        res;

-- Primitive Parsers

let result[V] (value : V) : Parser[V] =
    \(inp : PolyString) -> singleton[(V, PolyString)] (value, inp);

let zero[V] : Parser[V] =
    \(inp : PolyString) -> Nil[(V, PolyString)];

let item : Parser[Char] =
    \(inp : PolyString) ->
        case inp of
            Nil         ->      Nil[(Char, PolyString)]
          | Cons c xs   ->      singleton[(Char, PolyString)] (c, (invoke[PolyString] xs));

-- Combinators

let bind[A, B] (p : Parser[A]) (f : A -> Parser[B]) : Parser[B] =
    \(inp : PolyString) ->
        concat[(B, PolyString)]
              (map[(A, PolyString), PolyList[(B, PolyString)]]
                  (\(v : (A, PolyString)) -> f v._1 v._2) (p inp));

let (>>=)[A, B] (p : Parser[A]) (f : A -> Parser[B]) : Parser[B] =
    bind[A, B] p f;

let (>>)[A, B] (p : Parser[A]) (q : Parser[B]) : Parser[B] =
    p >>=[A, B] (\(__ : A) -> q);

let (<*)[A, B] (p : Parser[A]) (q : Parser[B]) : Parser[A] =
    p >>=[A, A] (\(a : A) ->
    q >>=[B, A] (\(__ : B) ->
    result[A] a));

let (*>)[A, B] (p : Parser[A]) (q : Parser[B]) : Parser[B] =
    p >>[A, B] q;

let using[A, B] (p : Parser[A]) (f : A -> B) : Parser[B] =
    bind[A, B] p (\(a : A) -> result[B] (f a));

let (<$>)[A, B] (p : Parser[A]) (f : A -> B) : Parser[B] =
    using[A, B] p f;

let ($>)[A, B] (p : Parser[A]) (b : B) : Parser[B] =
    using[A, B] p (\(__ : A) -> b);

let seq[A, B] (p : Parser[A]) (q : Parser[B]) : Parser[(A, B)] =
    bind[A, (A, B)] p (\(x : A) ->
    bind[B, (A, B)] q (\(y : B) ->
    result[(A, B)] (x, y)));

let choice[A] (p : Parser[A]) (q : Parser[A]) : Parser[A] =
    \(inp : PolyString) ->
        (p inp) +~[(A, PolyString)] (\(__ : Unit) -> q inp);

let (<|>)[A] (p : Parser[A]) (q : Parser[A]) : Parser[A] =
    choice[A] p q;

let sat (f : Char -> Bool) : Parser[Char] =
    bind[Char, Char] item (\(x : Char) -> if f x then (result[Char] x) else zero[Char]);

let char (x : Char) : Parser[Char] =
    sat (\(y : Char) -> x `charEq` y);

let notchar (x : Char) : Parser[Char] =
    sat (\(y : Char) -> x != y);

let digit : Parser[Char] =
    sat (\(x : Char) -> java.lang.Character.isDigit(x));

let upper : Parser[Char] =
    sat (\(x : Char) -> java.lang.Character.isUpperCase(x));

let lower : Parser[Char] =
    sat (\(x : Char) -> java.lang.Character.isLowerCase(x));

let space : Parser[Char] =
    sat (\(x : Char) -> java.lang.Character.isSpaceChar(x));

let whitespace : Parser[Char] =
    sat (\(x : Char) -> java.lang.Character.isWhitespace(x));

let letter : Parser[Char] =
    choice[Char] lower upper;

let alphanum : Parser[Char] =
    choice[Char] letter digit;

let noneof (s : PolyString) : Parser[Char] =
    sat (\(x : Char) -> (charin x s) `boolEq` False);

let oneof (s : PolyString) : Parser[Char] =
    sat (\(x : Char) -> charin x s);

let rec string (s : PolyString) : Parser[PolyString] =
    case s of
        Nil         ->  result[PolyString] (Nil[Char])
     |  Cons x xs   -> {
            let xs = invoke[PolyString] xs;
            (char x)
                >>[Char, PolyString] (string xs)
                $>[PolyString, PolyString] (x +>[Char] xs)
     };

-- Repetition

let rec many[A] (p : Parser[A]) : Parser[PolyList[A]] =
    choice[PolyList[A]] (bind[A, PolyList[A]] p (\(x : A) ->
                      bind[PolyList[A], PolyList[A]] (many[A] p) (\(xs : PolyList[A]) ->
                      result[PolyList[A]] (x +>[A] xs))))
                     (result[PolyList[A]] (Nil[A]));

let many1[A] (p : Parser[A]) : Parser[PolyList[A]] =
    bind[A, PolyList[A]] p (\(x : A) ->
    bind[PolyList[A], PolyList[A]] (many[A] p) (\(xs : PolyList[A]) ->
    result[PolyList[A]] (x +>[A] xs)));

let word : Parser[PolyString] =
    many1[Char] letter;

let ident : Parser[PolyString] =
    bind[Char, PolyString] lower (\(x : Char) ->
    bind[PolyString, PolyString] (many[Char] alphanum) (\(xs : PolyString) ->
    result[PolyString] (x +>[Char] xs)));

let natural : Parser[Int] = {
    let eval (xs : PolyList[Char]) =
        foldl[Int, Int] (\(b : Int) (a : Int) -> 10 * b + a)
                        0
                        (map[Char, Int] (\(c : Char) -> java.lang.Character.digit(c, 10)) xs);

    bind[PolyList[Char], Int] (many1[Char] digit) (\(xs : PolyList[Char]) -> result[Int] (eval xs))
};

let hexdecimal : Parser[Int] = {
    let eval (xs : PolyList[Char]) =
        foldl[Int, Int] (\(b : Int) (a : Int) -> 16 * b + a)
                        0
                        (map[Char, Int] (\(c : Char) -> java.lang.Character.digit(c, 16)) xs);
    (many1[Char] (oneof (fromString "1234567890abcdefABCDEF")))
        <$>[PolyList[Char], Int] (\(xs : PolyList[Char]) -> eval xs)
};

let int : Parser[Int] =
    choice[Int] ((char '-') >>[Char, Int]
                 (using[Int,Int] natural (\(n : Int) -> (-n))))
              natural;

-- Repetition with seperators

let sepby1[A, B] (p : Parser[A]) (sep : Parser[B]) : Parser[PolyList[A]] = {
    let rep[A, B] (p : Parser[A]) : Parser[A] =
        bind[B, A] sep (\(s : B) -> bind[A, A] p (\(y : A) -> result[A] y));
    bind[A, PolyList[A]] p (\(x : A) ->
    bind[PolyList[A], PolyList[A]] (many[A] (rep[A, B] p)) (\(xs : PolyList[A]) ->
    result[PolyList[A]] (Cons[A] x (\(__ : Unit) -> xs))))
};

let sepby[A, B] (p : Parser[A]) (sep : Parser[B]) : Parser[PolyList[A]] =
    choice[PolyList[A]] (sepby1[A, B] p sep) (result[PolyList[A]] (Nil[A]));


-- More complicated

-- Parses non-empty sequences of items seperated by operators that associate to the left
let chainl1[A] (p : Parser[A]) (op : Parser[A -> A -> A]) : Parser[A] = {
    let fy =
        bind[A -> A -> A, (A -> A -> A, A)] op (\(f : A -> A -> A) ->
        bind[A, (A -> A -> A, A)]           p  (\(y : A) ->
        result[(A -> A -> A, A)] (f, y)));

    bind[A, A]                           p                            (\(x : A) ->
    bind[PolyList[(A -> A -> A, A)], A]     (many[(A -> A -> A, A)] fy)  (\(fys: PolyList[(A -> A -> A, A)]) ->
    result[A] (foldl[(A -> A -> A, A), A] (\(x : A) (fy : (A -> A -> A, A)) -> fy._1 x fy._2) x fys)))
};

-- associate to the right
let rec chainr1[A] (p : Parser[A]) (op : Parser[A -> A -> A]) : Parser[A] =
    bind[A, A] p (\(x : A) ->
        choice[A] (bind[A -> A -> A, A] op (\(f : A -> A -> A) ->
                 bind[A, A] (chainr1[A] p op) (\(y : A) -> -- Calculate the result on the right
                 result[A] (f x y))))
                (result[A] x));

let chainl[A] (p : Parser[A]) (op : Parser[A -> A -> A]) (v : A) : Parser[A] =
    choice[A] (chainl1[A] p op) (result[A] v);

let chainr[A] (p : Parser[A]) (op : Parser[A -> A -> A]) (v : A) : Parser[A] =
    choice[A] (chainr1[A] p op) (result[A] v);


